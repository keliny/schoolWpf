<Window x:Class="wpfProjectJK01.DeleteMC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProjectJK01"
        mc:Ignorable="d"
        Title="DeleteMC" Height="276.778" Width="494.038">
    <Grid>
        <StackPanel Margin="20 20 20 20">
            <TextBlock Text="Are you sure you want to delete a Meeting Centre?" FontWeight="Bold" FontSize="20" />
            <TextBlock Text="All associated Meeting Rooms will be deleted as well."></TextBlock>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="280" />

                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnDeleteMC" Grid.Column="0" Content="Delete" Margin=" 0 20 10 0"
                        Click="Btn_Click_Delete_MC" Height="20" VerticalAlignment="Top" />
                <Button x:Name="BtnStorno" Click="Btn_Click_Storno" Grid.Column="2" Content="Storno" Margin=" 0 20 10 0" />
            </Grid>
        </StackPanel>



    </Grid>
</Window>
