<Window x:Class="wpfProjectJK01.ExitCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfProjectJK01"
        mc:Ignorable="d"
        Title="ExitCheck" Height="231.59" Width="749.163">
    <Grid>
        <StackPanel Margin="20 20 20 20">
            <TextBlock Text="Changes have been made. Do you wish to save the data before exiting?" FontWeight="Bold" FontSize="20" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="500" />
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnSave" Grid.Column="0" Content="Save and exit" Margin=" 0 20 10 0"
                        Click="Btn_Click_Save" />
                <Button x:Name="BtnExit" Click="Btn_Click_Exit" Grid.Column="2" Content="Exit" Margin=" 0 20 10 0" />
            </Grid>
        </StackPanel>



    </Grid>
</Window>
